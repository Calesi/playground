generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model PbItem {
    id              String   @id @default(cuid())
    url             String   @db.Text
    title           String?  @db.Text
    normalPrice     Float?
    affordablePrice Float?
    createdAt       DateTime @default(now())
}

model PbOrder {
    id         String @id @default(cuid())
    orderName  String
    orderItems Json   @default("[]")
}
